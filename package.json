{
  "name": "hauser-metall-webpage",
  "version": "0.0.1",
  "description": "The website for the Hauser Metall Shop",
  "repository": {
    "type": "git",
    "directory": "https://github.com/HauserSoftware/HauserMetall-Webpage.git"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "format": "pnpm exec prettier . --write --plugin=prettier-plugin-astro",
    "lint": "pnpm run /lint:.+/",
    "lint:format": "pnpm exec prettier . --check --plugin=prettier-plugin-astro",
    "lint:eslint": "pnpm eslint .",
    "audit:ci": "audit-ci --config ./audit-ci.jsonc"
  },
  "keywords": [],
  "author": "HauserSoftware",
  "license": "Apache-2.0",
  "lint-staged": {
    "{src}/**/*.{ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write --ignore-unknown --plugin=prettier-plugin-astro"
    ],
    "!**/*.{ts,tsx,astro}": [
      "prettier --write --ignore-unknown --plugin=prettier-plugin-astro"
    ]
  },
  "dependencies": {
    "@astrojs/check": "0.5.6",
    "@astrojs/react": "3.0.9",
    "@types/react": "18.2.52",
    "@types/react-dom": "18.2.18",
    "astro": "4.4.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "19.0.3",
    "@commitlint/config-conventional": "19.0.3",
    "@semantic-release/commit-analyzer": "11.1.0",
    "@semantic-release/github": "9.2.6",
    "@semantic-release/release-notes-generator": "12.1.0",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "audit-ci": "6.6.1",
    "conventional-changelog-eslint": "5.0.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-astro": "0.31.4",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "9.0.10",
    "lint-staged": "15.2.1",
    "prettier": "3.2.4",
    "prettier-plugin-astro": "0.13.0",
    "semantic-release": "23.0.2"
  }
}
